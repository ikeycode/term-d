	"description": "Grapheme aware TUI library",
	"license": "Zlib",
	"name": "term-d",
	"subPackages": [
		"./colors/",
		"./geometry/"
	],
	"buildRequirements": [
		"disallowDeprecations"
	],
	"dflags": [
		"-preview=dip1000",
		"-preview=nosharedaccess",
		"-preview=systemVariables",
		"-preview=in",
		"-preview=shortenedMethods"
	],
	"configurations": [
		{
			"name": "demo",
			"targetType": "executable",
			"dependencies": {
				"term-d:colors" : "*",
				"term-d:geometry": "*"
			}
		},
		{
			"name": "library",
			"targetType": "autodetect",
			"sourcePaths": [
				"source"
			],
			"dependencies": {
				"term-d:colors" : "*",
				"term-d:geometry": "*"
			},
			"excludedSourceFiles": [
				"source/app.d"
			]
		},
		{
			"name": "unittest",
			"sourcePaths": [
				"source",
				"colors",
				"geometry"
			],
			"excludedSourceFiles": [
				"source/app.d"
			]
		}
	]
}